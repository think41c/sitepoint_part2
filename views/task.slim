<!-- Most browsers don't know DELETE and PUT. They know GET and POST only. Sinatra uses hidden form 
fields to work around this so that DELETE is used correctly. -->


li.task
  = task.name
  form.update action="/task/#{task.id}" method="POST"
    input type="hidden" name="_method" value="PUT"
    -if task.completed_at.nil?
      input type="submit" value="  " title="Complete Task"
    -else
      input type="submit" value="âœ“" title="Uncomplete Task"
  
  form.delete action="/task/#{task.id}" method="POST"
    input type="hidden" name="_method" value="DELETE"
    input type="submit" value="&times;" title="Delete Task"